{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es2020",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "declaration": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
  },
  "include": [
    "typings/**/*",
    "src/**/*.tsx",
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.ts",
    "./jest-setup.ts",
    "src/env.d.ts"
  ],
  "exclude": ["src/**/*_.tsx"]
}
